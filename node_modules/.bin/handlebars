#!/usr/bin/env node

var optimist = require('optimist')
    .usage('Precompile handlebar templates.\nUsage: $0 [template|directory]...', {
      'f': {
        'type': 'string',
        'description': 'Output File',
        'name': 'output'
      },
      'map': {
        'type': 'string',
        'description': 'Source Map File'
      },
      'a': {
        'type': 'boolean',
        'description': 'Exports amd style (require.js)',
        'name': 'amd'
      },
      'c': {
        'type': 'string',
        'description': 'Exports CommonJS style, path to Handlebars module',
        'name': 'commonjs',
        'default': null
      },
      'h': {
        'type': 'string',
        'description': 'Path to handlebar.js (only valid for amd-style)',
        'name': 'handlebarPath',
        'default': ''
      },
      'k': {
        'type': 'string',
        'description': 'Known helpers',
        'name': 'known'
      },
      'o': {
        'type': 'boolean',
        'description': 'Known helpers only',
        'name': 'knownOnly'
      },
      'm': {
        'type': 'boolean',
        'description': 'Minimize output',
        'name': 'min'
      },
      'n': {
        'type': 'string',
        'description': 'Template namespace',
        'name': 'namespace',
        'default': 'Handlebars.templates'
      },
      's': {
        'type': 'boolean',
        'description': 'Output template function only.',
        'name': 'simple'
      },
      'N': {
        'type': 'string',
        'description': 'Name of passed string templates. Optional if running in a simple mode. Required when operating on multiple templates.',
        'name': 'name'
      },
      'i': {
        'type': 'string',
        'description': 'Generates a template from the passed CLI argument.\n"-" is treated as a special value and causes stdin to be read for the template value.',
        'name': 'string'
      },
      'r': {
        'type': 'string',
        'description': 'Template root. Base value that will be stripped from template names.',
        'name': 'root'
      },
      'p': {
        'type': 'boolean',
        'description': 'Compiling a partial template',
        'name': 'partial'
      },
      'd': {
        'type': 'boolean',
        'description': 'Include data when compiling',
        'name': 'data'
      },
      'e': {
        'type': 'string',
        'description': 'Template extension.',
        'name': 'extension',
        'default': 'handlebars'
      },
      'b': {
        'type': 'boolean',
        'description': 'Removes the BOM (Byte Order Mark) from the beginning of the templates.',
        'name': 'bom'
      },
      'v': {
        'type': 'boolean',
        'description': 'Prints the current compiler version',
        'name': 'version'
      },

      'help': {
        'type': 'boolean',
        'description': 'Outputs this message'
      }
    })

    .wrap(120)
    .check(function(argv) {
      if (argv.version) {
        return;
      }
    });


var argv = optimist.argv;
argv.files = argv._;
delete argv._;

var Precompiler = require('../dist/cjs/precompiler');
Precompiler.loadTemplates(argv, function(err, opts) {
  if (err) {
    throw err;
  }

  if (opts.help || (!opts.templates.length && !opts.version)) {
    optimist.showHelp();
  } else {
    Precompiler.cli(opts);
  }
});
