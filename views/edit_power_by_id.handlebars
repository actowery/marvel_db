{{#if form_data.superpower}}
	<h2>Edit Power</h2>
	<form action="/edit/superpower/{{form_data.superpower.id}}" method="POST">
		<div class="form-group">
			<label for="description">First Name</label>
			<input type="text" class="form-control" id="description" name="description" value="{{form_data.superpower.spow}}">
			<p style="display:none;" id="description_error"><strong style="color:red;">You must provide a short description (laser eyes, etc)</strong></p>
		</div>
		<button type="submit" class="btn btn-default">Update Power</button>
	</form>
	<script>
		document.querySelector("#description > option[value='{{form_data.superpower.spow}}']").selected = true;
	</script>
{{else}}
	<h1>Power Not Found</h1>
{{/if}}
<script src="/js/superpower_form.js" type="text/javascript"></script>