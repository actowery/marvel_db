{{#if form_data.person}}
<h2>Edit Person</h2>
<form action="/edit/person/{{form_data.person.id}}" method="POST">
	<div class="form-group">
		<label for="villain">Is Villain?</label>
		<input type="checkbox" class="form-control" id="villain" name="villain">
	</div>
	<div class="form-group">
		<label for="name">Alias</label>
		<input type="text" class="form-control" id="name" name="name" value="{{form_data.person.name}}">
		<p style="display:none;" id="name_error"><strong style="color:red;">You must provide an name.</strong></p>
	</div>
	<div class="form-group">
		<label for="real_name">Real Name</label>
		<input type="text" class="form-control" id="real_name" name="real_name" value="{{form_data.person.real_name}}">
	</div>
	<div class="form-group">
		<label for="power">Power</label>
		<select class="form-control" id="power" name="power">
			{{#each form_data.power}}
				<option value="{{id}}">{{name}}</option>
			{{/each}}
		</select>
	</div>
	<div class="form-group">
		<label for="city">City</label>
		<select class="form-control" id="city" name="city">
			{{#each form_data.citys}}
				<option value="{{id}}">{{name}}</option>
			{{/each}}
		</select>
	</div>
	<div class="form-group">
		<label for="origin">Origin Story</label>
		<input type="text" class="form-control" id="origin" name="origin" value="{{form_data.person.origin}}">
	</div>
	<button type="submit" class="btn btn-default">Update Person</button>
</form>
<script>
	document.querySelector("#city > option[value='{{form_data.person.city}}']").selected = true;
	document.querySelector("#name > option[value='{{form_data.person.name}}']").selected = true;
</script>
{{else}}
<h1>Person Not Found</h1>
{{/if}}
<script src="/js/person_form.js" type="text/javascript"></script>