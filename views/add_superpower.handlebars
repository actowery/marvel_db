<h2>Add Power</h2>
<form action="/add/superpower/" method="POST">
	<div class="form-group">
		<label for="superpower">Power</label>
		<input type="text" class="form-control" id="description" name="description" placeholder="X-Ray Vision">
		<p style="display:none;" id="superpower_error"><strong style="color:red;">Must be a superpower entered.</strong></p>
	</div>

	<button type="submit" class="btn btn-default">Add Power</button>
</form>
<script src="/js/superpower_form.js" type="text/javascript"></script>

