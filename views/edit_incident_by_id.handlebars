{{#if incident}}
	<h2>Edit Incident</h2>
	<form action="/edit/incident/{{incident.ID}}" method="POST">
		<div class="form-group">
			<label for="name">Incident Description</label>
			<input type="text" class="form-control" id="incident_description" name="incident_description" value="{{incident.description}}">
			<p style="display:none;" id="incident_name_error"><strong style="color:red;">Incident Description required.</strong></p>
		</div>
		<div class="form-group">
			<label for="city">City</label>
			<select class="form-control" id="city" name="city">
				{{#each city}}
					<option value="{{id}}">{{name}}</option>
				{{/each}}
			</select>
		</div>
		<div class="form-group">
			<label for="person">Person</label>
			<select class="form-control" id="person" name="person">
				{{#each person}}
					<option value="{{id}}">{{name}}</option>
				{{/each}}
			</select>
		</div>
		<button type="submit" class="btn btn-default">Update Incident</button>
	</form>
	<div class="form-group">
		<label for="good_wins">Good wins?</label>
		<input type="checkbox" class="form-control" id="good_wins" name="good_wins" placeholder="Title">
	</div>
	<script>
		document.querySelector("#city > option[value='{{incident.in_CityID}}']").selected = true;
	</script>
{{else}}
	<h1>Incident Not Found</h1>
{{/if}}
<script src="/js/incident_form.js" type="text/javascript"></script>