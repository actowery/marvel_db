<h2>Add Incident</h2>
<form action="/add/incident/" method="POST">
	<div class="form-group">
		<label for="description">Incident Description</label>
		<input type="text" class="form-control" id="description" name="description" placeholder="Incident Description">
		<p style="display:none;" id="incident_name_error"><strong style="color:red;">Incident Description required.</strong></p>
	</div>
	<div class="form-group">
		<label for="city">City</label>
		<select class="form-control" id="in_CityID" name="in_CityID">
			{{#each form_data.city}}
				<option value="{{id}}">{{name}}</option>
			{{/each}}
		</select>
	</div>
	<div class="form-group">
		<label for="person">Person</label>
		<select class="form-control" id="person" name="person">
			{{#each form_data.person}}
				<option value="{{id}}">{{name}}</option>
			{{/each}}
		</select>
	</div>
	<div class="form-group">
		<label for="good_wins">Good wins?</label>
		<input type="checkbox" class="form-control" id="good_wins" name="good_wins" placeholder="Title">
	</div>
	<button type="submit" class="btn btn-default">Add Incident</button>
</form>
<script src="/js/incident_form.js" type="text/javascript"></script>