<h2>Add City</h2>
<form action="/add/city/" method="POST">
	<div class="form-group">
		<label for="city_name">City Name</label>
		<input type="text" class="form-control" id="city_name" name="city_name" placeholder="City Name">
		<p style="display:none;" id="city_name_error"><strong style="color:red;">You must provide a city name.</strong></p>
	</div>
	<div class="form-group">
		<label for="city_population">Population</label>
		<input type="number" class="form-control" id="city_population" name="city_population" placeholder="Population">
		<p style="display:none;" id="city_population_error"><strong style="color:red;">You must provide a population.</strong></p>
	</div>
	<div class="form-group">
		<label for="city_citysize">citysize (sqft.)</label>
		<input type="number" class="form-control" id="city_citysize" name="city_citysize" placeholder="citysize">
		<p style="display:none;" id="city_citysize_error"><strong style="color:red;">You must provide a citysize.</strong></p>
	</div>
	<button type="submit" class="btn btn-default">Add City</button>
</form>
<script src="/js/city_form.js" type="text/javascript"></script>