{{#if city}}
<h2>Edit City</h2>
<form action="/edit/city/{{city.ID}}" method="POST">
	<div class="form-group">
		<label for="city_name">City Name</label>
		<input type="text" class="form-control" id="city_name" name="city_name" placeholder="City Name" value="{{city.name}}">
		<p style="display:none;" id="city_name_error"><strong style="color:red;">You must provide a city name.</strong></p>
	</div>
	<div class="form-group">
		<label for="city_population">Population</label>
		<input type="number" class="form-control" id="city_population" name="city_population" value="{{city.population}}">
		<p style="display:none;" id="city_population_error"><strong style="color:red;">You must provide a population.</strong></p>
	</div>
	<div class="form-group">
		<label for="city_size">Size (sqft.)</label>
		<input type="number" class="form-control" id="city_size" name="city_size" value="{{city.size}}">
		<p style="display:none;" id="city_size_error"><strong style="color:red;">You must provide a size.</strong></p>
	</div>
	<button type="submit" class="btn btn-default">Update City</button>
</form>
{{else}}
<h1>City Not Found</h1>
{{/if}}
<script src="/js/city_form.js" type="text/javascript"></script>